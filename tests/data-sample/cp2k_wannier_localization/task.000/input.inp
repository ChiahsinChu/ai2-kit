&FORCE_EVAL
  METHOD QS
  &DFT
    BASIS_SET_FILE_NAME BASIS_MOLOPT
    BASIS_SET_FILE_NAME BASIS_ADMM
    BASIS_SET_FILE_NAME BASIS_ADMM_MOLOPT
    BASIS_SET_FILE_NAME BASIS_MOLOPT-HSE06
    POTENTIAL_FILE_NAME GTH_POTENTIALS
    &MGRID
      CUTOFF 800
      NGRIDS 5
    &END MGRID
    &QS
      EPS_DEFAULT 1e-13
    &END QS
    &SCF
      SCF_GUESS RESTART
      EPS_SCF 1e-06
      MAX_SCF 500
      ADDED_MOS 500
      CHOLESKY INVERSE
      &SMEAR ON
        METHOD FERMI_DIRAC
        ELECTRONIC_TEMPERATURE 300
      &END SMEAR
      &DIAGONALIZATION
        ALGORITHM STANDARD
      &END DIAGONALIZATION
      &MIXING
        METHOD BROYDEN_MIXING
        ALPHA 0.3
        BETA 1.5
        NBUFFER 8
      &END MIXING
    &END SCF
    &XC
      &XC_FUNCTIONAL PBE
      &END XC_FUNCTIONAL
      &vdW_POTENTIAL
        DISPERSION_FUNCTIONAL PAIR_POTENTIAL
        &PAIR_POTENTIAL
          TYPE DFTD3
          PARAMETER_FILE_NAME dftd3.dat
          REFERENCE_FUNCTIONAL PBE
        &END PAIR_POTENTIAL
      &END vdW_POTENTIAL
    &END XC
    WFN_RESTART_FILE_NAME /data/jxzhu/finite_field/wannier_calculation/06.training_set/calc/task.000.000000/cp2k-RESTART.wfn
    &LOCALIZE
      EPS_LOCALIZATION 0.01
      RESTART .TRUE.
      &PRINT
        &LOC_RESTART
        &END LOC_RESTART
        &WANNIER_CENTERS
          FILENAME =wannier.xyz
        &END WANNIER_CENTERS
        &WANNIER_SPREADS
          FILENAME =wannier_spread.out
        &END WANNIER_SPREADS
      &END PRINT
    &END LOCALIZE
  &END DFT
  &SUBSYS
    &TOPOLOGY
      COORD_FILE_FORMAT XYZ
      COORD_FILE_NAME coord.xyz
    &END TOPOLOGY
    &KIND O
      POTENTIAL GTH-PBE-q6
      BASIS_SET DZVP-MOLOPT-SR-GTH
    &END KIND
    &KIND H
      POTENTIAL GTH-PBE-q1
      BASIS_SET DZVP-MOLOPT-SR-GTH
    &END KIND
    &KIND Pt
      POTENTIAL GTH-PBE-q10
      BASIS_SET DZVP-A5-Q10-323-MOL-T1-DERIVED_SET-1
    &END KIND
    &KIND Ag
      POTENTIAL GTH-PBE-q11
      BASIS_SET DZVP-MOLOPT-SR-GTH
    &END KIND
    &KIND Na
      POTENTIAL GTH-PBE-q9
      BASIS_SET DZVP-MOLOPT-SR-GTH
    &END KIND
    &KIND K
      POTENTIAL GTH-PBE-q9
      BASIS_SET DZVP-MOLOPT-SR-GTH
    &END KIND
    &KIND Li
      POTENTIAL GTH-PBE-q3
      BASIS_SET DZVP-MOLOPT-SR-GTH
    &END KIND
    &KIND C
      POTENTIAL GTH-PBE-q4
      BASIS_SET DZVP-MOLOPT-SR-GTH
    &END KIND
    &KIND N
      POTENTIAL GTH-PBE-q5
      BASIS_SET DZVP-MOLOPT-SR-GTH
    &END KIND
    &KIND Cl
      POTENTIAL GTH-PBE-q7
      BASIS_SET DZVP-MOLOPT-SR-GTH
    &END KIND
    &KIND F
      POTENTIAL GTH-PBE-q7
      BASIS_SET DZVP-MOLOPT-SR-GTH
    &END KIND
    &KIND Mg
      POTENTIAL GTH-PBE-q10
      BASIS_SET DZVP-MOLOPT-SR-GTH
    &END KIND
    &KIND Al
      POTENTIAL GTH-PBE-q3
      BASIS_SET DZVP-MOLOPT-SR-GTH
    &END KIND
    &CELL
      A 16.8687 0.0000 0.0000
      B 0.0000 14.6088 0.0000
      C 0.0000 0.0000 41.4777
    &END CELL
  &END SUBSYS
  &PRINT
    &FORCES ON
    &END FORCES
  &END PRINT
  STRESS_TENSOR NONE
&END FORCE_EVAL
&GLOBAL
  PROJECT cp2k
&END GLOBAL