&GLOBAL
  PROJECT cp2k
&END GLOBAL
&FORCE_EVAL
  &DFT
    BASIS_SET_FILE_NAME  BASIS_MOLOPT
    POTENTIAL_FILE_NAME  GTH_POTENTIALS
    CHARGE  0
    UKS  F
    &MGRID
      CUTOFF  800
      NGRIDS  5
    &END MGRID
    &QS
      EPS_DEFAULT  1.0E-12
    &END QS
    &SCF
      SCF_GUESS RESTART
      EPS_SCF 1e-06
      MAX_SCF 500
      ADDED_MOS 500
      CHOLESKY INVERSE
      &SMEAR ON
        METHOD FERMI_DIRAC
        ELECTRONIC_TEMPERATURE 300
      &END SMEAR
      &DIAGONALIZATION
        ALGORITHM STANDARD
      &END DIAGONALIZATION
      &MIXING
        METHOD BROYDEN_MIXING
        ALPHA 0.3
        BETA 1.5
        NBUFFER 8
      &END MIXING
    &END SCF
    &XC
      &XC_FUNCTIONAL PBE
      &END
      &vdW_POTENTIAL
        DISPERSION_FUNCTIONAL  PAIR_POTENTIAL
        &PAIR_POTENTIAL
          TYPE  DFTD3
          PARAMETER_FILE_NAME  dftd3.dat
          REFERENCE_FUNCTIONAL  PBE
        &END PAIR_POTENTIAL
      &END vdW_POTENTIAL
    &END XC
    &LOCALIZE
      EPS_LOCALIZATION 0.001
      RESTART .TRUE.
      &PRINT
        &LOC_RESTART
        &END LOC_RESTART
        &WANNIER_CENTERS
          FILENAME =wannier.xyz
        &END WANNIER_CENTERS
        &WANNIER_SPREADS
          FILENAME =wannier_spread.out
        &END WANNIER_SPREADS
      &END PRINT
    &END LOCALIZE
  &END DFT
  &SUBSYS
    @include coord_n_cell.inc
    &KIND O
      BASIS_SET  DZVP-MOLOPT-SR-GTH
      POTENTIAL  GTH-PBE-q6
    &END KIND
    &KIND H
      BASIS_SET  DZVP-MOLOPT-SR-GTH
      POTENTIAL  GTH-PBE-q1
    &END KIND
    &KIND Pt
      POTENTIAL GTH-PBE-q10
      BASIS_SET DZVP-A5-Q10-323-MOL-T1-DERIVED_SET-1
    &END KIND
    &KIND Li
      POTENTIAL GTH-PBE-q3
      BASIS_SET DZVP-MOLOPT-SR-GTH
    &END KIND
    &KIND Na
      POTENTIAL GTH-PBE-q9
      BASIS_SET DZVP-MOLOPT-SR-GTH
    &END KIND
    &KIND K
      POTENTIAL GTH-PBE-q9
      BASIS_SET DZVP-MOLOPT-SR-GTH
    &END KIND
    &KIND Rb
      POTENTIAL GTH-PBE-q9
      BASIS_SET DZVP-MOLOPT-SR-GTH
    &END KIND
    &KIND Cs
      POTENTIAL GTH-PBE-q9
      BASIS_SET DZVP-MOLOPT-SR-GTH
    &END KIND
  &END SUBSYS
  &PRINT
    &FORCES ON
    &END FORCES
  &END PRINT
  STRESS_TENSOR NONE
&END FORCE_EVAL
