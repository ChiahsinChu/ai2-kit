&FORCE_EVAL
  METHOD QS
  &DFT
    BASIS_SET_FILE_NAME BASIS_MOLOPT
    BASIS_SET_FILE_NAME BASIS_ADMM
    BASIS_SET_FILE_NAME BASIS_ADMM_MOLOPT
    BASIS_SET_FILE_NAME BASIS_MOLOPT-HSE06
    POTENTIAL_FILE_NAME GTH_POTENTIALS
    &MGRID
      CUTOFF 800
      NGRIDS 5
    &END MGRID
    &QS
      EPS_DEFAULT 1e-13
    &END QS
    &SCF
      SCF_GUESS RESTART
      EPS_SCF 1e-06
      MAX_SCF 500
      ADDED_MOS 0
      CHOLESKY RESTORE
      &SMEAR .FALSE.
        METHOD FERMI_DIRAC
        ELECTRONIC_TEMPERATURE 300
      &END SMEAR
      &DIAGONALIZATION .FALSE.
        ALGORITHM STANDARD
      &END DIAGONALIZATION
      &MIXING
        METHOD BROYDEN_MIXING
        ALPHA 0.3
        BETA 1.5
        NBUFFER 8
      &END MIXING
    &END SCF
    &XC
      &XC_FUNCTIONAL PBE
      &END XC_FUNCTIONAL
      &vdW_POTENTIAL
        DISPERSION_FUNCTIONAL PAIR_POTENTIAL
        &PAIR_POTENTIAL
          TYPE DFTD3
          PARAMETER_FILE_NAME dftd3.dat
          REFERENCE_FUNCTIONAL PBE
        &END PAIR_POTENTIAL
      &END vdW_POTENTIAL
    &END XC
    &LOCALIZE
      EPS_LOCALIZATION 0.0001
      RESTART .TRUE.
      &PRINT
        &LOC_RESTART
        &END LOC_RESTART
        &WANNIER_CENTERS
          IONS+CENTERS .TRUE.
          FILENAME =wannier.xyz
        &END WANNIER_CENTERS
      &END PRINT
    &END LOCALIZE
  &END DFT
  &SUBSYS
    &TOPOLOGY
      COORD_FILE_FORMAT XYZ
      COORD_FILE_NAME coord.xyz
    &END TOPOLOGY
    &KIND O
      POTENTIAL GTH-PBE-q6
      BASIS_SET DZVP-MOLOPT-SR-GTH
    &END KIND
    &KIND H
      POTENTIAL GTH-PBE-q1
      BASIS_SET DZVP-MOLOPT-SR-GTH
    &END KIND
    &KIND C
      POTENTIAL GTH-PBE-q4
      BASIS_SET DZVP-MOLOPT-SR-GTH
    &END KIND
    &KIND N
      POTENTIAL GTH-PBE-q5
      BASIS_SET DZVP-MOLOPT-SR-GTH
    &END KIND
    &KIND S
      POTENTIAL GTH-PBE-q6
      BASIS_SET DZVP-MOLOPT-SR-GTH
    &END KIND
    &KIND Li
      POTENTIAL GTH-PBE-q3
      BASIS_SET DZVP-MOLOPT-SR-GTH
    &END KIND
    &KIND Na
      POTENTIAL GTH-PBE-q9
      BASIS_SET DZVP-MOLOPT-SR-GTH
    &END KIND
    &KIND K
      POTENTIAL GTH-PBE-q9
      BASIS_SET DZVP-MOLOPT-SR-GTH
    &END KIND
    &KIND Rb
      POTENTIAL GTH-PBE-q9
      BASIS_SET DZVP-MOLOPT-SR-GTH
    &END KIND
    &KIND Cs
      POTENTIAL GTH-PBE-q9
      BASIS_SET DZVP-MOLOPT-SR-GTH
    &END KIND
    &KIND F
      POTENTIAL GTH-PBE-q7
      BASIS_SET DZVP-MOLOPT-SR-GTH
    &END KIND
    &KIND Cl
      POTENTIAL GTH-PBE-q7
      BASIS_SET DZVP-MOLOPT-SR-GTH
    &END KIND
    &KIND Br
      POTENTIAL GTH-PBE-q7
      BASIS_SET DZVP-MOLOPT-SR-GTH
    &END KIND
    &KIND I
      POTENTIAL GTH-PBE-q7
      BASIS_SET DZVP-MOLOPT-SR-GTH
    &END KIND
    &CELL
      A 16.0450 0.0000 0.0000
      B 0.0000 16.0450 0.0000
      C 0.0000 0.0000 16.0450
    &END CELL
  &END SUBSYS
  &PRINT
    &FORCES ON
    &END FORCES
  &END PRINT
  STRESS_TENSOR NONE
&END FORCE_EVAL
&GLOBAL
  PROJECT cp2k
&END GLOBAL
